<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.camera.gbcamera_backend.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.camera.gbcamera_backend.vo.User">
        <id property="id" column="id"/>
        <result property="password" column="password"/>
    </resultMap>

    <select id="findByIdAndPassword" resultMap="UserResultMap">
        SELECT id, password
        FROM GBCamera.`user`
        WHERE id = #{id}
        AND password = #{password}
        LIMIT 1
    </select>

</mapper>
